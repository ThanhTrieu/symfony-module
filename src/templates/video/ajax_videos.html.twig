{% if listBottomVideos|length > 0 %}
    {% for key,item in listBottomVideos %}
        <figure id="item-{{ item.id }}" class="thumb-video ajax-video {{ (key+1)%3==1? 'clear':'' }} {{ (key+1)%3==0? 'last':''}}">
            <a href="javascript:void(0);" class="image iframetrack" title="{{ item.title_hover }}" data-url="{{ item.url }}" rel="{{ item.source_video }}" data-title="{{ item.title|raw }}">
                <img src="{{ item.avatar }}" alt="{{ item.title_hover }}" width="370" height="220">
                <span class="tag-video" title="{{ item.title_hover }}"><i class="icon-videocam"></i></span>
            </a>
            <figcaption class="caption">
                <h3 class="title-news iframetrackTitle">
                    <a href="javascript:void(0);" data-url="{{ item.url }}" rel="{{ item.source_video }}" class="title-news" title="{{ item.title_hover }}" data-img="{{ item.avatar }}">
                        {{ item.title|raw }}
                    </a>
                </h3>
            </figcaption>
        </figure>
    {% endfor %}
{% endif %}
{% if ajax is defined %}
    {% block js %}
        <script type="text/javascript" src="/js/video.js"></script>
    {% endblock %}
{% endif %}